<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.safepak">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SafePak">
        <activity
            android:name="com.example.safepak.frontend.other.ProfileActivity"
            android:exported="true"
            android:theme="@style/Theme.SafePakAppbar"
            android:label="Profile" />
        <activity
            android:name="com.example.safepak.frontend.chat.ChatBoxActivity"
            android:exported="true" />
        <activity
            android:name="com.example.safepak.frontend.other.SettingsActivity"
            android:exported="true"
            android:label="Settings"
            android:theme="@style/Theme.SafePakAppbar" />
        <activity
            android:name="com.example.safepak.frontend.chat.AddFriendActivity"
            android:exported="true" />
        <activity
            android:name="com.example.safepak.frontend.status.AddStatusActivity"
            android:exported="true"
            android:label="Write status"
            android:theme="@style/Theme.SafePakAppbar"/>
        <activity
            android:name="com.example.safepak.frontend.home.HomeActivity"
            android:exported="true" />
        <activity
            android:name="com.example.safepak.frontend.register.VerifyActivity"
            android:exported="true" />
        <activity
            android:name="com.example.safepak.frontend.login.ForgetActivity"
            android:exported="true" />
        <activity
            android:name="com.example.safepak.frontend.register.RegisterActivity"
            android:exported="true" />
        <activity
            android:name="com.example.safepak.frontend.login.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.safepak.frontend.login.LoginActivity"
            android:exported="true" />
    </application>

</manifest>