<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".frontend.safety.SafetyFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/calibrib"
                android:text="Safety"
                android:textColor="@color/medium_black"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/safetybox_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                android:elevation="5dp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="Level-2"
                    android:textColor="@color/text_color_grey"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/level2_bt"
                    app:layout_constraintHorizontal_bias="0.588"
                    app:layout_constraintStart_toStartOf="@+id/level2_bt"
                    app:layout_constraintTop_toBottomOf="@+id/level2_bt" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="Medical"
                    android:textColor="@color/text_color_grey"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/medical_bt"
                    app:layout_constraintStart_toStartOf="@+id/medical_bt"
                    app:layout_constraintTop_toBottomOf="@+id/medical_bt" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="133dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="133dp"
                    android:fontFamily="@font/normal_text"
                    android:text="Call For Help"
                    android:textColor="@color/medium_black"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageView
                    android:id="@+id/medical_bt"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="@drawable/ripple_bg"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="@+id/level1_bt"
                    app:layout_constraintEnd_toStartOf="@+id/level2_bt"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/level1_bt"
                    app:layout_constraintTop_toTopOf="@+id/level1_bt"
                    app:srcCompat="@drawable/medical" />

                <ImageView
                    android:id="@+id/level1_bt"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="@drawable/ripple_bg"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toStartOf="@+id/medical_bt"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView4"
                    app:srcCompat="@drawable/level1" />

                <ImageView
                    android:id="@+id/level2_bt"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="@drawable/ripple_bg"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="@+id/medical_bt"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/medical_bt"
                    app:layout_constraintTop_toTopOf="@+id/medical_bt"
                    app:srcCompat="@drawable/level2" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="Level-1"
                    android:textColor="@color/text_color_grey"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/level1_bt"
                    app:layout_constraintStart_toStartOf="@+id/level1_bt"
                    app:layout_constraintTop_toBottomOf="@+id/level1_bt" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/bold_titles"
                android:text="Close contacts"
                android:textColor="@color/medium_black"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/close_recycler"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/chatlist_bg"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8"
                tools:listitem="@layout/closelist_item"
                android:elevation="5dp"
                android:minHeight="80dp"/>

            <TextView
                android:id="@+id/emptyclose_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No close contacts added"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/close_recycler"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/close_recycler" />

            <TextView
                android:id="@+id/help_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/bold_titles"
                android:text="Friends In Need"
                android:textColor="@color/medium_black"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/close_recycler" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/help_recycler"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/help_text"
                tools:listitem="@layout/help_item"
                android:minHeight="100dp"/>

            <TextView
                android:id="@+id/emptyhelp_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No emergency calls yet"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/help_recycler"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/help_recycler" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>