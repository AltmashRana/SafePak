<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.SafePak.AppWidget.Container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.SafePak.AppWidgetContainer"
    android:paddingEnd="4dp"
    android:paddingStart="4dp"
    android:background="@drawable/safetybox_bg">

        <ImageView
            android:id="@+id/widgetlevel1_bt"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/ripple_bg"
            android:scaleType="centerCrop"
            android:src="@drawable/level1" />

        <ImageView
            android:id="@+id/widgetlevel2_bt"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="24dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/ripple_bg"
            android:scaleType="centerCrop"
            android:src="@drawable/level2" />

        <ImageView
            android:id="@+id/widgetmedical_bt"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/ripple_bg"
            android:scaleType="centerCrop"
            android:src="@drawable/medical" />

</RelativeLayout>