<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/announcement_bg"
    android:layout_marginHorizontal="10dp"
    android:layout_margin="10dp"
    android:elevation="4dp">

    <ImageView
        android:id="@+id/announcement_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/level2_ic" />

    <TextView
        android:id="@+id/announcement_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/bold_text"
        android:text="Kravachenko called for critical help"
        android:textColor="@color/medium_black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/announcement_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/announcement_icon"
        app:layout_constraintTop_toTopOf="@+id/announcement_icon"
        app:layout_constraintVertical_bias="0.26" />

    <TextView
        android:id="@+id/typetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/bold_text"
        android:text="Type:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/announcement_icon" />

    <TextView
        android:id="@+id/announcementdate_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="Date: Thursday, 2021"
        android:textColor="@color/app_blue"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView15"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/bold_text"
        android:text="Location:"
        app:layout_constraintStart_toStartOf="@+id/typetext"
        app:layout_constraintTop_toBottomOf="@+id/typetext" />

    <TextView
        android:id="@+id/announcementtype_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/normal_text"
        android:text="Level-1"
        app:layout_constraintBottom_toTopOf="@+id/announcementlocation_text"
        app:layout_constraintStart_toStartOf="@+id/announcementlocation_text" />

    <TextView
        android:id="@+id/announcementlocation_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/normal_text"
        android:text="Johar Town, Lahore"
        app:layout_constraintBottom_toBottomOf="@+id/textView15"
        app:layout_constraintStart_toEndOf="@+id/textView15"
        app:layout_constraintTop_toTopOf="@+id/textView15" />

</androidx.constraintlayout.widget.ConstraintLayout>