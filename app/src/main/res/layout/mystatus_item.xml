<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mystatus_bg"
    android:padding="5dp"
    android:layout_marginVertical="20dp"
    android:layout_marginHorizontal="10dp"
    android:elevation="5dp">

    <TextView
        android:id="@+id/mycontent_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:ems="10"
        android:fontFamily="@font/normal_text"
        android:gravity="start|top"
        android:text="This all test is just for the purpose of testing. So, please ignore it!!!!"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mystatusdate_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/normal_text"
        android:text="Date: 29 Feb, 2022"
        android:textColor="@color/light_blue_900"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/mycontent_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/mycontent_text"
        app:layout_constraintTop_toBottomOf="@id/mycontent_text"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/mystatusdelete_bt"
        style="@style/Widget.AppCompat.ActionButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mycontent_text"
        app:srcCompat="@drawable/delete_post" />

</androidx.constraintlayout.widget.ConstraintLayout>